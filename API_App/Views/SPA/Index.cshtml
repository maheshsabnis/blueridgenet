<script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>

<script>
    $(document).ready(function(){
        $("#btnloadlist").on('click',function(){
          var url = '@Url.Action("ListPartial", "SPA")';
          loadView(url);
        });
        $("#btnloadadd").on('click', function () {
            var url = '@Url.Action("CreatePartial", "SPA")';
            loadView(url);
        });
        $("#btnloadupdate").on('click', function () {
            var url = '@Url.Action("EditPartial", "SPA")';
            loadView(url);
        });
        $("#btnloaddelete").on('click', function () {
            var url = '@Url.Action("DeletePartial", "SPA")';
            loadView(url);
        });
        $("#btnclearviews").on('click', function () {
            $("#dvview").html("");
        });
    });

    function loadView(url){
        $.ajax({
            url: url,
            type: 'GET'
        }).done(function (response) {
            $("#dvview").html(response);
        }).fail(function (error) {
            $("#dvmessage").html(error);
        });
    }
</script>


<h1>The SPA APP</h1>

<table class="table table-bordered table-striped">
    <tr>
        <td>
            <input type="button" value="List" id="btnloadlist" class="btn btn-primary"/>
        </td>

        <td>
            <input type="button" value="Add" id="btnloadadd" class="btn btn-success" />
        </td>

        <td>
            <input type="button" value="Update" id="btnloadupdate" class="btn btn-warning" />
        </td>

        <td>
            <input type="button" value="Delete" id="btnloaddelete" class="btn btn-danger" />
        </td>
        <td>
            <input type="button" value="Clear" id="btnclearviews" class="btn btn-default" />
        </td>
    </tr>
</table>
<br/>
<div id="dvmessage" class="container"></div>
<br/>
<div id="dvview" class="container"></div>